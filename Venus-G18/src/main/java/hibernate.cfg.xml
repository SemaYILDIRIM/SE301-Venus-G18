<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/venus?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="DAO/Attachment.hbm.xml"/>
    <mapping resource="DAO/Issue.hbm.xml"/>
    <mapping resource="DAO/User.hbm.xml"/>
    <mapping resource="DAO/Projectuser.hbm.xml"/>
    <mapping resource="DAO/Project.hbm.xml"/>
    <mapping resource="DAO/Comment.hbm.xml"/>
    <mapping resource="DAO/Issuehistory.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
